// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Category {
  id        String   @id @default(cuid())
  name      String   @unique
  slug      String   @unique
  icon      String?
  products  Product[]
  content   CategoryContent?
  createdAt DateTime @default(now())
}

model Product {
  id          String      @id @default(cuid())
  title       String
  imageUrl    String
  score       Float
  categoryId  String
  category    Category    @relation(fields: [categoryId], references: [id])
  rank        Int?        // Thứ hạng sản phẩm
  badge       String?     // Badge (Best Overall, Popular, etc.)
  highlights  Highlight[]
  offers      Offer[]
  reviewMeta  ReviewMeta?
  reviewsCount Int?       // Số lượng đánh giá
  boughtNote  String?     // Ghi chú về số lượng mua
  discount    String?     // Thông tin giảm giá
  retailer    String?     // Nhà bán lẻ
  list        Json?       // Dữ liệu JSON từ Buyereviews
  createdAt   DateTime    @default(now())
}

model Highlight {
  id        String   @id @default(cuid())
  text      String
  productId String
  product   Product  @relation(fields: [productId], references: [id])
}

model Offer {
  id         String   @id @default(cuid())
  retailer   String
  url        String
  badge      String?
  discount   String?
  productId  String
  product    Product  @relation(fields: [productId], references: [id])
}

model ReviewMeta {
  id           String  @id @default(cuid())
  reviewsCount Int
  boughtNote   String?
  productId    String  @unique
  product      Product @relation(fields: [productId], references: [id])
}

model NewsletterSubscription {
  id        String   @id @default(cuid())
  email     String   @unique
  createdAt DateTime @default(now())
}

model CategoryContent {
  id                    String   @id @default(cuid())
  categoryId            String   @unique
  category              Category @relation(fields: [categoryId], references: [id])
  
  // SEO & Meta
  customTitle           String?  // Override default title
  customDescription     String?  // Override default description
  customBreadcrumb     String?  // Override default breadcrumb
  
  // Content
  overviewTitle         String?
  overviewParagraphs    Json?    // Array of paragraphs as JSON
  
  topProductsTitle      String?
  topProductsParagraphs Json?    // Array of paragraphs as JSON
  
  // FAQ
  faqItems             Json?    // Array of {question: string, answer: string}
  
  // Keywords & SEO
  keywords              String?
  metaTitle             String?
  metaDescription       String?
  
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
}
