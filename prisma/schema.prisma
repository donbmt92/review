generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Category {
  id        String           @id @default(cuid())
  name      String           @unique
  slug      String           @unique
  icon      String?
  iconImage String?
  parentId  String?
  createdAt DateTime         @default(now())
  parent    Category?        @relation("CategoryHierarchy", fields: [parentId], references: [id])
  children  Category[]       @relation("CategoryHierarchy")
  content   CategoryContent?
  products  Product[]
}

model Product {
  id           String      @id @default(cuid())
  title        String
  imageUrl     String
  score        Float
  categoryId   String
  createdAt    DateTime    @default(now())
  list         Json?
  badge        String?
  boughtNote   String?
  discount     String?
  rank         Int?
  retailer     String?
  reviewsCount Int?
  highlights   Highlight[]
  offers       Offer[]
  category     Category    @relation(fields: [categoryId], references: [id])
  reviewMeta   ReviewMeta?
}

model Highlight {
  id        String  @id @default(cuid())
  text      String
  productId String
  product   Product @relation(fields: [productId], references: [id])
}

model Offer {
  id        String  @id @default(cuid())
  retailer  String
  url       String
  badge     String?
  discount  String?
  productId String
  product   Product @relation(fields: [productId], references: [id])
}

model ReviewMeta {
  id           String  @id @default(cuid())
  reviewsCount Int
  boughtNote   String?
  productId    String  @unique
  product      Product @relation(fields: [productId], references: [id])
}

model NewsletterSubscription {
  id        String   @id @default(cuid())
  email     String   @unique
  createdAt DateTime @default(now())
}

model CategoryContent {
  id                    String   @id @default(cuid())
  categoryId            String   @unique
  customTitle           String?
  customDescription     String?
  customBreadcrumb      String?
  overviewTitle         String?
  overviewParagraphs    Json?
  topProductsTitle      String?
  topProductsParagraphs Json?
  faqItems              Json?
  keywords              String?
  metaTitle             String?
  metaDescription       String?
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  category              Category @relation(fields: [categoryId], references: [id])
}
